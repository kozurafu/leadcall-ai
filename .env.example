# --- n8n Webhook (required for lead forwarding + email summaries) ---
# Set to your n8n webhook URL. Handles both new leads and call summaries.
N8N_DEMO_WEBHOOK=https://your-n8n-instance.example.com/webhook/leadcall-demo

# --- Vapi (AI outbound calling) ---
VAPI_API_KEY=your_vapi_api_key
VAPI_ASSISTANT_ID=your_vapi_assistant_id
VAPI_PHONE_NUMBER_ID=your_vapi_phone_number_id

# Vapi webhook security token (optional but recommended)
VAPI_WEBHOOK_TOKEN=your_random_secret_token

# --- SMTP fallback (only used if N8N_DEMO_WEBHOOK is not set) ---
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your_smtp_user
SMTP_PASS=your_smtp_password
SMTP_FROM=noreply@leadcall.ai

# --- App ---
NEXT_PUBLIC_APP_URL=https://leadcall.yourdomain.com
NODE_ENV=production
